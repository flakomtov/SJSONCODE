<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#478BBD"
    tools:context=".SettingsActivity">

  <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/settingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/settingsbtn"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:onClick="back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Settings"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_below="@+id/settingsbtn"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selectedAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/av1" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Flakomtivs"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/settingbtn"
        android:background="@drawable/whiteback"
        android:contentDescription="@string/title_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:onClick="profil"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/shape"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/changeprofil"
                    android:onClick="profil"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/profil_change" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profil"
                        android:textColor="#302F2F"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Avatar"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:onClick="privacy"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/shape"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/privacy"
                    android:onClick="privacy"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/privacy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textColor="#302F2F"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms, Privacy Policy"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:onClick="support"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/shape"
                android:padding="10dp">

                <ImageButton
                    android:onClick="support"
                    android:id="@+id/contact"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/contact" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textColor="#302F2F"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact us"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:onClick="about"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/shape"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/about"
                    android:onClick="about"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/about" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="#302F2F"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About app"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>